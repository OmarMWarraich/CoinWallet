<section class='form-new-transaction'>
<%= form_with(model: tx) do |form| %>
  <% if tx.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tx.errors.count, "error") %> prohibited this tx from being saved:</h2>

      <ul>
        <% tx.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :author_id, value: current_user.id %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div>
    <%= form.label :commodity_id, style: "display: block" %>
    <%= form.text_field :commodity_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
</section>