<section class='commodity-section'>
<p style="color: green"><%= notice %></p>
  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="#">Account Settings</a>
    <a href="#">Merchant Finder</a>
    <a href="#">Claim promo</a>
    <a href="#">Share promo</a>
  </div>
  <div class='header'>
    <div onclick="openNav()">
      <%= image_tag ("hamburger.png") %>
    </div>
    <div>
      <h1>Categories</h1>     
    </div>
    <div class='search-section'>
      <%= image_tag ("search2.png"), class:'search-image' %>
    </div>
  </div>
  
  <div class="commodities">    
      <% if @commodities.length == 0 %>
         <p>There are no categories</p>
         <% else %>
         <div class='commodity-cards'>
      <% @commodities.each do |commodity| %>
        <%= link_to txes_path(@tx) do%>
          <div class='commodity-card'>
            <div><%= image_tag(commodity.icon_url, width: 100, height: 100) if commodity.icon.present? %></div>
            <div class='commodity-details'>
              <div><small>Name: <%= commodity.name %></small></div>
              <div><small>Count: <%= commodity.txes.count %></small></div>
              <div><small><%= commodity.created_at.strftime("%d %b %Y") %></small></div>
            </div>
          </div>
        <% end %>
        <% end %>
      </div>
        <% end %>
  
    <div class='green-button-section'>
      <% if can? :create, Commodity %>
        <%= link_to "New Category", new_commodity_path, class:'new-category-button' %>
      <% end %>
    </div>
  </div>
  </section>